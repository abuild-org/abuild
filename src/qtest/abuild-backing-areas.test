#!/usr/bin/env perl

require 5.008;
BEGIN { $^W = 1; }
use strict;

require TestDriver;
require abuild_test_utils;

chdir("abuild-backing-areas") or die;

my $td = new TestDriver("backing areas");
test_setup();

my $top = get_top();
