#!/usr/bin/env perl
require 5.008;
BEGIN { $^W = 1; }
use strict;

require TestDriver;

my $td = new TestDriver('demo');

my %exp = ('VAR1' => 'first value',
	   'VAR2' => 'second value',
	   'potato' => 'one two three',
	   'spackle' => 'four five six',
	   'truth1' => '1');

foreach my $v (sort keys %exp)
{
    $td->runtest("$v",
		 {$td->STRING => $ENV{$v} . "\n"},
		 {$td->STRING => $exp{$v} . "\n"},
		 $td->NORMALIZE_NEWLINES);
}

$td->report(5);
